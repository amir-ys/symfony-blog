{% set flashMessages = app.session.flashbag.all %}
{% if flashMessages is not empty %}
    <div class="alert-container">
        {% for message_type, messages in flashMessages %}
            {% for message in messages %}
                <div class="alert alert-{{ message_type }} alert-with-border alert-dismissible" role="alert" id="alert-message-element">
                    <i class="ti-check m-l-10"></i>
                    {{ message }}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                </div>
            {% endfor %}
        {% endfor %}
    </div>
{% endif %}
