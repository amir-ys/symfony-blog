{% extends '/auth/layouts/main.html.twig' %}
{% block content %}
    <div class="row align-items-center h-100-vh">
        <div class="col-lg-6 d-none d-lg-block p-t-b-25">
            <img class="img-fluid" src="assets/media/svg/register.svg" alt="...">
        </div>
        <div class="col-lg-4 offset-lg-1 p-t-25 p-b-10">
            <h3>ثبت نام</h3>
            <p>ایجاد حساب کاربری جدید</p>
            <form>
                <div class="form-group mb-4">
                    <input type="text" class="form-control form-control-lg" autofocus placeholder="نام">
                </div>
                <div class="form-group mb-4">
                    <input type="text" class="form-control form-control-lg" autofocus placeholder="نام خانوادگی">
