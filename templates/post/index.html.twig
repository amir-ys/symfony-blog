{% extends './layouts/main.html.twig' %}
{% block title %}پست ها{% endblock %}
{% block breadcrumb %}
    <li class="breadcrumb-item active"><a>پست ها</a></li>
{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="row mb-3">
                <div class="col-sm-12 col-md-12 col-lg-2">
                    <a href="{{ path('panel.categories.new') }}"
                       class="btn btn-primary btn-rounded waves-effect waves-light mb-2 me-2">
                        ایجاد دسته بندی
                        <i class="mdi mdi-plus me-1"></i>
                    </a>
                </div>
            </div>
            <div class="card">
                <div class="card-body border border-5">
                    <div class="table-responsive">
                        <table id="table" class="table table-hover">
                            <thead class="thead-light">
                            <tr>
                                <th>شناسه</th>
                                <th>موضوع</th>
                                <th>دسته پدر</th>
                                <th>لوگو</th>
                                <th> تاریخ ایجاد</th>
                                <th>وضعیت</th>
                                <th> عملیات</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for post in posts %}
                                <tr>
                                    <td>{{ post.getId }}</td>
                                    <td>{{ post.getTitle }}</td>
                                    <td>{{ post.getSummery }}</td>
                                    <td>{{ post.getContent }}</td>
                                    <td>{{ post.getAuthor }}</td>
                                    <td>{{ post.getImage }}</td>
                                    <td>
                                    <span class="badge badge-{{ post.getStatus.getCssClass }}">
                                        {{ post.getStatus.getDisplayName }}
                                    </span>
                                    </td>
                                    <td>{{ post.getIsCommentable }}</td>
                                    <td>{{ post.getPublishedAt }}</td>
                                    <td>{{ post.getViewCount }}</td>
                                    <td>
                                        <a class="btn btn-sm bg-transparent d-inline"
                                           href="{{ path('panel.categories.edit' , {id : category.id}) }}"><i
                                                class="fa fa-pencil fa-15m text-success"></i></a>

                                        <a href="{{ path('panel.categories.delete' , { id: category.id}) }}"
                                           onclick="deleteCategory('{{ category.id }}')"
                                           class="btn btn-sm bg-transparent d-inline delete-confirm"><i
                                                class="fa fa-trash fa-15m text-danger"></i>
                                        </a>

                                        <form action="{{ path('panel.categories.delete' , { id: category.id}) }}"
                                              method="post"
                                              id="delete_category_{{ category.id }}"
                                        >
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        function deleteCategory(id) {
            event.preventDefault()
            if (confirm('آیا از انجام این  کار اطمینان دارید؟')){
                $('#delete_category_' + id).submit()
            }
        }
    </script>
{% endblock %}
